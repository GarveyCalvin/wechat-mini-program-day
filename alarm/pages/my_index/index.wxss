/**index.wxss**/
page {
  background-color: black;
}
.list-box {
  display: flex;
  width: 100%;
  height: 80px;
  flex-direction: column;
  background-color: #111111;
}

.list {
  width: inherit;
  height: inherit;
  display: flex;
  padding-left: 10px;
  padding-top: 3px;
}

.list-title {
  font-size: 42px;
  color: #fff;
}

.list-sub-title {
  font-size: 20px;
  color: #fff;
}

.list-detail {
  font-size: 10px;
  color: #fff;
  display: block;
  margin-top: -8px;
}

.list-switch-box {
  width: inherit;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.right-switch {
  margin-right: 0px;
  padding-right: 20px;
}

.list-line {
  width: inherit;
  height: 1px;
  background-color: rgb(39, 39, 39);
  display: flex;
}